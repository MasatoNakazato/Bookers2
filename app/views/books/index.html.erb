<diV class = "container">

<div class = "row">
  <% if @book.errors.any? %>
  <div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li>error</li>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class = "col-xs-3">

<%= render "books/list", user: @user, book: @book %>
  </div>


<div class = "col-xs-9">

<h1>Books</h1>
<table class = "table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |books|%>
    <tr>

      <td><%= link_to user_path(books.user.id) do %><%= attachment_image_tag books.user, :profile_image, fallback: "no-image.png", class: "image" %><% end %></td>

      <td><%= link_to books.title, book_path(books.id) %></td>

      <td><%= books.body %></td>

    </tr>
  <%end%>
  </tbody>
</table>
</div>
</div>
