<div class = "container">
<div class = "row">
   <div class = "col-xs-3">
<%= render "books/list", user: @user, book: @book %>
   </div>
    <div class = "col-xs-9">
<h1>Book detail</h1>

<% if @books.user_id == current_user.id %>
<table class="table">
  
  <tbody>

    <tr>
      
      <td><%= link_to user_path(@books.user.id) do %><%= attachment_image_tag @books.user, :profile_image, fallback: "no-image.png", class: "image" %><br><%= @user.name %><% end %></td>

      <td><%= link_to @books.title, book_path(@books.id) %></td>

      <td><%= @books.body %></td>

      <td><%= link_to "Edit", edit_book_path(@books.id) %></td>

      <td><%= link_to "Destroy", book_path(@books.id), method: :delete %></td>

    </tr>


</table>
<% else %>
<table class="table">
<tbody>

    <tr>
      
      <td><%= link_to user_path(@books.user.id) do %><%= attachment_image_tag @books.user, :profile_image, fallback: "no-image.png", class: "image" %><br><%= @user.name %><% end %></td>
    
      <td><%= link_to @books.title, book_path(@books.id) %></td>

      <td><%= @books.body %></td>

    </tr>


</table>
<%end%>
</div>
</div>
</div>